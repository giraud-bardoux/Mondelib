# Configuration Apache pour Cursor Event Parser

# Activer la réécriture d'URL
Options +FollowSymLinks
RewriteEngine On

# Protection contre les injections
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
RewriteRule .* - [F,L]

# Autoriser l'accès au proxy PHP
<Files "proxy.php">
    Order allow,deny
    Allow from all
</Files>

# Bloquer l'accès direct aux fichiers sensibles
<FilesMatch "\.(log|txt|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Headers de sécurité
<IfModule mod_headers.c>
    # CORS pour permettre les requêtes cross-origin (si nécessaire)
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # Sécurité supplémentaire
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Cache pour les assets statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
</IfModule>

# Compression GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Protection par mot de passe (décommentez pour activer)
# AuthType Basic
# AuthName "Accès restreint - Cursor Event Parser"
# AuthUserFile /chemin/absolu/vers/.htpasswd
# Require valid-user

# Limiter la taille des uploads
<IfModule mod_php7.c>
    php_value upload_max_filesize 2M
    php_value post_max_size 8M
    php_value max_execution_time 60
    php_value max_input_time 60
    php_value memory_limit 128M
</IfModule>

# Page d'erreur personnalisée
ErrorDocument 403 "Accès interdit"
ErrorDocument 404 "Page non trouvée"
ErrorDocument 500 "Erreur serveur"

# Désactiver la signature du serveur
ServerSignature Off

# Index par défaut
DirectoryIndex index.html index.php